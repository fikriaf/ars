{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/app.ts",
    "src/index.ts",
    "src/config/**/*",
    "src/middleware/logging-middleware.ts",
    "src/middleware/metrics-middleware.ts",
    "src/routes/health.ts",
    "src/routes/ili.ts",
    "src/routes/icr.ts",
    "src/routes/reserve.ts",
    "src/routes/agents.ts",
    "src/routes/proposals.ts",
    "src/routes/revenue.ts",
    "src/routes/programs.ts",
    "src/routes/metrics.ts",
    "src/routes/slow-queries.ts",
    "src/services/supabase.ts",
    "src/services/solana-programs.ts",
    "src/services/ili-calculator.ts",
    "src/services/memory/logger.ts",
    "src/services/memory/metrics.ts",
    "src/services/memory/event-emitter.ts",
    "src/services/memory/circuit-breaker.ts",
    "src/services/memory/slow-query-logger.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/cron/**/*",
    "src/middleware/capacity-check.ts",
    "src/middleware/query-rate-limit.ts",
    "src/routes/compliance.ts",
    "src/routes/memory.ts",
    "src/routes/privacy.ts",
    "src/services/upstash-redis.ts",
    "src/services/sak/**/*",
    "src/services/helius-client.ts",
    "src/services/icr-calculator.ts",
    "src/services/defi/**/*",
    "src/services/oracles/**/*",
    "src/services/privacy/**/*",
    "src/services/websocket.ts",
    "src/services/agent-swarm/**/*",
    "src/services/payment/**/*",
    "src/services/staking/**/*"
  ]
}
