    "src/tests/**/*",
    "src/services/privacy/**/*",
    "src/services/agent-swarm/**/*",
    "src/services/sak/**/*",
    "src/services/staking/**/*",
    "src/services/payment/**/*",
    "src/services/helius/**/*",
    "src/services/helius-client.ts",
    "src/services/upstash-redis.ts",
    "src/services/defi/kamino-client-real.ts",
    "src/services/defi/lulo-client.ts",
    "src/services/oracle-health-monitor.ts",
    "src/services/memory/wallet-registration.ts",
    "src/services/memory/transaction-indexer.ts",
    "src/services/memory/graceful-degradation.ts",
    "src/services/memory/prediction-market.ts",
    "src/services/memory/resilient-cache.ts",
    "src/services/memory/monitoring.ts",
    "src/middleware/capacity-check.test.ts",
    "src/middleware/privacy-auth.ts",
    "src/middleware/query-rate-limit.ts",
    "src/routes/privacy.ts",
    "src/routes/compliance.ts",
    "src/routes/memory.ts",
    "src/cron/payment-scanner.ts"
  ]
