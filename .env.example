# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL
POSTGRES_PASSWORD=your-super-secret-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXPIRY=3600

# Supabase Keys (Generate these from Supabase dashboard or use defaults for local dev)
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# API Configuration
API_EXTERNAL_URL=http://localhost:8000
SITE_URL=http://localhost:5173

# Auth Configuration
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
ADDITIONAL_REDIRECT_URLS=

# Redis
REDIS_PASSWORD=your-redis-password

# OpenClaw (Optional)
OPENCLAW_API_KEY=
OPENCLAW_WORKSPACE=agentic-reserve-system

# Colosseum Hackathon
COLOSSEUM_API_KEY=
COLOSSEUM_API_BASE=https://api.colosseum.org/v1

# Backend API
PORT=4000
NODE_ENV=development
SUPABASE_URL=http://localhost:8000
REDIS_URL=redis://:your-redis-password@localhost:6379

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# ============================================================================
# Privacy Features (Sipher Integration)
# ============================================================================

# Sipher API Configuration
SIPHER_API_URL=https://sipher.sip-protocol.org
SIPHER_API_KEY=your_sipher_api_key_here
SIPHER_ENABLED=true
SIPHER_TIMEOUT=30000

# Privacy Features
PRIVACY_ENABLED=true
MEV_PROTECTION_ENABLED=false
COMPLIANCE_MODE=selective

# Privacy Thresholds
PRIVACY_SCORE_THRESHOLD=70
MEV_REDUCTION_TARGET=80

# Key Management
KEY_ROTATION_DAYS=90
VIEWING_KEY_EXPIRATION_DAYS=30
MASTER_KEY_MULTISIG_THRESHOLD=3

# Scanning Configuration
PAYMENT_SCAN_INTERVAL_SECONDS=60
PAYMENT_SCAN_BATCH_SIZE=100
PAYMENT_SCAN_RETRY_ATTEMPTS=5

# Encryption Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_DERIVATION=pbkdf2
ENCRYPTION_ITERATIONS=100000
